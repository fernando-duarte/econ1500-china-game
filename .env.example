# Docker image versions and configuration
# Copy this file to .env and customize as needed

# Environment type (development, staging, production)
NODE_ENV=development
ENV_SUFFIX=dev  # Used for volume naming (dev, staging, prod)

# Docker configuration
DOCKER_PATH=docker/dockerfiles  # Path to Dockerfiles

# Base images
NODE_VERSION=20.13.1
PYTHON_VERSION=3.12.2

# Main application
FRONTEND_IMAGE=solow-frontend
FRONTEND_VERSION=1.1.0
FRONTEND_PORT=3000

BACKEND_IMAGE=solow-backend
BACKEND_VERSION=1.1.0
BACKEND_PORT=4000

MODEL_IMAGE=solow-model
MODEL_VERSION=1.1.0
MODEL_PORT=8000

# China Growth Game (optional)
# Set to "true" to enable China Growth Game services
ENABLE_CHINA_GAME=false
CHINA_BACKEND_PORT=3001
CHINA_MODEL_PORT=8001

# Additional environment variables
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000
# ADMIN_API_KEY=admin-dev-key-change-in-production

# Production settings
# Uncomment these for production deployment
# NODE_ENV=production
# ENV_SUFFIX=prod
